<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified">
	
	<Dialog
		id="massUploaderDialog"
		title="Mass Uploader"
		draggable="true"
		resizable="true"
		contentWidth="30rem"
		contentHeight="7rem"
		horizontalScrolling="false"
		verticalScrolling="false">
		
		<customHeader>
			<Bar>
				<contentLeft>
					<Label text="Mass Uploader" design="Bold" />
				</contentLeft>
				<contentRight>
					<Button
						text="Preview"
						icon="sap-icon://inspect"
						type="Transparent"
						press="onPreview"/>

			 <Button
				text="Sample File Template"
				 icon="sap-icon://download" 
				press="onDownloadExcel"/>
				</contentRight>
			</Bar>
		</customHeader>

		<HBox
			width="100%"
			height="100%"
			alignItems="Center"
			
			>
			
			<u:FileUploader
			placeholder="Choose XLSX File"
			class="sapUiResponsiveMargin"
				id="fileUploader"
				
				name="myFileUpload"
				uploadUrl="upload/"
				tooltip="Upload your file to the local server"
				uploadComplete="handleUploadComplete"
				change="onFileChange"/>
				
			
		</HBox>
		<beginButton>
			<Button
				text="Upload File"
				type="Emphasized"
				press="onUpload"/>
		</beginButton>

		<endButton>
			<Button
				text="Cancel"
				 type="Reject"
				press="onCloseMassUploaderDialog"/>
		</endButton>

	</Dialog>
</core:FragmentDefinition>
