                                    <Column width="auto" hAlign="Left" visible="false">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "DOCUMENT_MODE", "maxLength": "100","columnIndex":"20", "leadingProperty": "DOCUMENT_MODE", "sortProperty": "DOCUMENT_MODE", "filterProperty": "DOCUMENT_MODE", "type": "string","additionalProperty": "DOCUMENT_MODE_TEXT"}' />
