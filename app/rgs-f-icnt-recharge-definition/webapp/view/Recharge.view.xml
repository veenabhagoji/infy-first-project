                            </smartTable:layoutData>
                            <smartTable:customToolbar>
                                <OverflowToolbar design="Transparent">
                                    <ToolbarSpacer />
                                    <Button id="idShareLink" text="Share Link" type="Emphasized" press="handleShareLink" visible="{= ${masterFav>/favorite} ? false : true}" enabled="true" tooltip="" />
