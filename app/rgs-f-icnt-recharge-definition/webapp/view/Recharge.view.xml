                                <items>
                                    <ColumnListItem type="Navigation">
                                        <cells>
                                            <Text text="{CODE}" />
                                            <Text text="{REVISION}" />
                                            <Text text="{DOC_TYPE} - {DOC_DESCRIPTION}" />
                                            <Text text="{DOCUMENT_LEVEL_TEXT}" />
