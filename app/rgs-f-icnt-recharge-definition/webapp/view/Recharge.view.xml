                                            <ExpandableText text="{AGG_TAG_DESC}" maxCharacters="10" overflowMode="Popover" />
                                            <ExpandableText text="{path:'AGG_FUNCTION'}" maxCharacters="10" overflowMode="Popover" />
                                            <ExpandableText text="{path:'AGG_SBU'}" maxCharacters="10" overflowMode="Popover" />
                                            <ExpandableText text="{path:'AGG_SITE_AREA'}" maxCharacters="10" overflowMode="Popover" />
                                            <ExpandableText text="{path:'AGG_WORK_AREA'}" maxCharacters="10" overflowMode="Popover" />
                                            <ExpandableText text="{path:'AGG_SYSTEM_APPROVER'}" maxCharacters="10" overflowMode="Popover" />
                                            <ExpandableText text="{path:'AGG_MANAGMENT_APPROVER'}" maxCharacters="10" overflowMode="Popover" />
                                            <ExpandableText text="{path:'AGG_STANDARD'}" maxCharacters="10" overflowMode="Popover" />
                                            <ExpandableText text="{path:'AGG_CLAUSE'}" maxCharacters="10" overflowMode="Popover" />
                                            <Link
