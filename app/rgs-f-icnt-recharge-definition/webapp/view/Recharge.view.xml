                                    </Column>
                                    <Column width="auto" hAlign="Left">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "STATUS_ID", "columnIndex":"4", "leadingProperty": "STATUS_ID", "type": "string","sortProperty": "STATUS_TEXT", "additionalProperty": "STATUS_TEXT"}' />
                                        </customData>
                                        <Text text="{i18n>status}" />
                                    </Column>
                                    <Column width="auto" hAlign="Left">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "TITLE", "maxLength": "100","columnIndex":"5", "leadingProperty": "TITLE", "sortProperty": "TITLE", "filterProperty": "TITLE", "type": "string"}' />
                                        </customData>
                                        <Text text="{i18n>doctitle}" />
                                    </Column>
                                    <Column width="auto" hAlign="Left">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "LANDSCAPE_PROCESS_ID", "maxLength": "100","columnIndex":"6", "leadingProperty": "LANDSCAPE_PROCESS_ID", "sortProperty": "LANDSCAPE_PROCESS_ID", "filterProperty": "LANDSCAPE_PROCESS_ID", "type": "string"}'                                            />
