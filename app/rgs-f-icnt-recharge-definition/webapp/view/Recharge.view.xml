                                    <Column width="auto" hAlign="Left" visible="false">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "AGG_CLAUSE", "columnIndex":"27","sortProperty": "AGG_CLAUSE", "filterProperty": "AGG_CLAUSE", "leadingProperty": "AGG_CLAUSE", "type": "string"}' />
