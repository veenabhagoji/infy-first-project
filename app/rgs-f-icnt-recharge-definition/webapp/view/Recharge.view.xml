                                            <Text text="{DOCUMENT_MODE_TEXT}" />
                                            <Text text="{BU}" />
                                            <ExpandableText text="{path:'AGG_REGION'}" maxCharacters="10" overflowMode="Popover" />
                                            <ExpandableText text="{path:'AGG_SITE'}" maxCharacters="10" overflowMode="Popover" />
                                            <ExpandableText text="{path:'AGG_CCODE'}" maxCharacters="10" overflowMode="Popover" />
                                            <ExpandableText text="{path:'AGG_SUBREGION'}" maxCharacters="10" overflowMode="Popover" />
