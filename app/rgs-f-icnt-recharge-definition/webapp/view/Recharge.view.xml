                                    <Column width="auto" hAlign="Left" visible="false">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "OLD_HIMDOC_NO", "columnIndex":"13", "sortProperty": "OLD_HIMDOC_NO", "leadingProperty": "OLD_HIMDOC_NO", "type": "string"}' />
