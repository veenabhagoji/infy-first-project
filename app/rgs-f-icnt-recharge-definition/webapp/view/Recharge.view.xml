                                            <core:CustomData key="p13nData" value='\{"columnKey": "AGG_WORK_AREA", "columnIndex":"18","sortProperty": "AGG_WORK_AREA",  "leadingProperty": "AGG_WORK_AREA", "type": "string"}' />
                                        </customData>
                                        <Text text="Work Area" />
