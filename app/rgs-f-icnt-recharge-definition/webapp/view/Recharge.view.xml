                                            <core:CustomData key="p13nData" value='\{"columnKey": "LINK", "columnIndex":"28","sortProperty": "LINK", "filterProperty": "LINK", "leadingProperty": "LINK", "type": "string"}' />
                                        </customData>
                                        <Text text="Link" />
                                    </Column>
