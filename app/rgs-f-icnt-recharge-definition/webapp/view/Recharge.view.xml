                                    <Column width="auto" hAlign="Left" visible="false">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "AGG_CCODE", "maxLength": "100","columnIndex":"11", "leadingProperty": "AGG_CCODE", "sortProperty": "AGG_CCODE", "filterProperty": "AGG_CCODE", "type": "string"}' />
