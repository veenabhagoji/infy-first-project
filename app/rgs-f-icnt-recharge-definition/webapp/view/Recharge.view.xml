                            <Title text="{i18n>appTitle}" wrapping="true" />
                        </FlexBox>
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:expandedHeading>
                    <FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">
                        <FlexBox wrap="NoWrap" fitContainer="true" alignItems="Center">
                            <Title text="{i18n>appTitle}" wrapping="true" />
                        </FlexBox>
                    </FlexBox>
                </uxap:expandedHeading>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
            <smartvariants:SmartVariantManagement id="idSmartVariantManagement" persistencyKey="pKeyPageVariantManagement" showExecuteOnSelection="true" showShare="true"/>
            <smartFilterBar:SmartFilterBar id="smartFilterHimdoc" entitySet="RechargeType" enableBasicSearch="true" basicSearchFieldName="CODE" persistencyKey="UniqueAndStablePersistencyKeyFilterHimdocs" liveMode="true" beforeVariantFetch="onBeforeVariantFetch" afterVariantLoad="onAfterVariantLoad" initialise="onFInitialise" pendingChange="handleFilterChange" smartVariant="idSmartVariantManagement" assignedFiltersChanged="handleFilterChange">
                <smartFilterBar:controlConfiguration>
                    <smartFilterBar:ControlConfiguration key="FAV" label="{i18n>mFav}" groupId="_BASIC" visibleInAdvancedArea="true">
