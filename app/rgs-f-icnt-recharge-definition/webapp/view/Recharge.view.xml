                                            <core:CustomData key="p13nData" value='\{"columnKey": "AGG_MANAGMENT_APPROVER", "columnIndex":"18","sortProperty": "AGG_MANAGMENT_APPROVER",  "leadingProperty": "AGG_MANAGMENT_APPROVER", "type": "string"}' />
