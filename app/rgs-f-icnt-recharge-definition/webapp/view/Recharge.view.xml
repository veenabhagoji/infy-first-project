                            </MultiComboBox>
                        </smartFilterBar:customControl>
                    </smartFilterBar:ControlConfiguration>
                    <smartFilterBar:ControlConfiguration key="LANDSCAPE_PROCESS_ID" groupId="_BASIC" visibleInAdvancedArea="true">
                        <smartFilterBar:customControl>
