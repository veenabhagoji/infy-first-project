<mvc:View displayBlock="true" id="idHIMDOCmasterPage" height="100%" controllerName="com.roche.rgsficntrechargedefinition.controller.Recharge"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:smartvariants="sap.ui.comp.smartvariants"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

    <Page id="simplePage" title="{i18n>appTitle}" showHeader="true">
    
        <VBox class="sapUiSmallMargin">

            
            <smartvariants:SmartVariantManagement
                id="idSmartVariantManagement"
                persistencyKey="pKeyPageVariantManagement"
                showExecuteOnSelection="true"
                showShare="true" />

            
            <smartFilterBar:SmartFilterBar
                id="smartFilterBar"
                entitySet="RechargeType"
                enableBasicSearch="true"
                basicSearchFieldName="CODE"
                persistencyKey="UniqueAndStablePersistencyKeyFilterHimdocs"
                liveMode="true"
                beforeVariantFetch="onBeforeVariantFetch"
                afterVariantLoad="onAfterVariantLoad"
                initialise="onFInitialise"
                pendingChange="handleFilterChange"
                smartVariant="idSmartVariantManagement"
                assignedFiltersChanged="handleFilterChange" />

            
            <smartTable:SmartTable
                id="smartTable"
                enableAutoBinding="true"
                entitySet="RechargeType"
                tableType="ResponsiveTable"
                useTablePersonalisation="true"
                header="Recharge Table"
                showRowCount="true"
                smartFilterId="smartFilterBar"
                persistencyKey="UniqueAndStablePersistencyKeyMasterTableHimdocs"
                useVariantManagement="true"
                showDetailsButton="true"
                demandPopin="true"
                enableAutoColumnWidth="true"
                placeToolbarInTable="true"
                beforeRebindTable="onBeforeRebind"
                ignoredFields="">

                <smartTable:layoutData>
                    <FlexItemData growFactor="1" baseSize="0%" />
                </smartTable:layoutData>

                <smartTable:customToolbar>
                    <Toolbar>
                        <ToolbarSpacer />
                        <Button text="Create" type="Emphasized" press=".onCreatePress" />
                        <Button text="Mass Upload" type="Emphasized" press=".onMassUploadPress" />
                    </Toolbar>
                </smartTable:customToolbar>

                <Table
                    id="id_RC_Main_Tbl_Main"
                    growing="true"
                    growingScrollToLoad="true"
                    growingThreshold="100"
                    sticky="HeaderToolbar,InfoToolbar,ColumnHeaders"
                    class="radioButtonGroup"
                    mode="SingleSelectMaster"
                    itemPress="onRowPress"
                    selectionChange="onRadioSelectionChange">

                    <columns>
                        <Column width="auto" hAlign="Left">
                            <customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "rechargeTypeId", "maxLength": "100","columnIndex":"0", "leadingProperty": "rechargeTypeId", "sortProperty": "rechargeTypeId", "filterProperty": "rechargeTypeId", "type": "string", "additionalProperty":"rechargeTypeId"}' />
                            </customData>
                            <Text text="ID" />
                        </Column>

                        <Column width="auto" hAlign="Left">
                            <customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "version", "maxLength": "4", "columnIndex": "1", "leadingProperty": "version", "sortProperty": "version", "filterProperty": "version", "type": "string"}' />
                            </customData>
                            <Text text="Version" />
                        </Column>

                        <Column width="auto" hAlign="Left">
                            <customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "rechargeType", "maxLength": "100","columnIndex":"2", "leadingProperty": "rechargeType", "sortProperty": "rechargeType", "filterProperty": "rechargeType", "type": "string", "additionalProperty": "rechargeType"}' />
                            </customData>
                            <Text text="Recharge Type" />
                        </Column>

                        <Column width="16em" hAlign="Left">
                            <customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "rechargeTypeDesc", "maxLength": "100","columnIndex":"3", "leadingProperty": "rechargeTypeDesc", "sortProperty": "rechargeTypeDesc", "filterProperty": "rechargeTypeDesc", "type": "string","additionalProperty": "rechargeTypeDesc"}' />
                            </customData>
                            <Text text="Recharge Type Desc" />
                        </Column>

                        <Column width="auto" hAlign="Left">
                            <customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "rechargeAssessmentReq", "columnIndex":"4", "leadingProperty": "rechargeAssessmentReq", "type": "Boolean","sortProperty": "rechargeAssessmentReq", "additionalProperty": "rechargeAssessmentReq"}' />
                            </customData>
                            <Text text="Assessment Req" />
                        </Column>

                        <Column width="auto" hAlign="Left">
                            <customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "taxCode", "maxLength": "100","columnIndex":"5", "leadingProperty": "taxCode", "sortProperty": "taxCode", "filterProperty": "taxCode", "type": "string"}' />
                            </customData>
                            <Text text="Tax Code" />
                        </Column>

                        <Column width="auto" hAlign="Left">
                            <customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "validFrom", "maxLength": "100","columnIndex":"6", "leadingProperty": "validFrom", "sortProperty": "validFrom", "filterProperty": "validFrom", "type": "Date"}' />
                            </customData>
                            <Text text="Valid From" />
                        </Column>

                        <Column width="auto" hAlign="Left">
                            <customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "validTo", "maxLength": "100","columnIndex":"7", "leadingProperty": "validTo", "sortProperty": "validTo", "filterProperty": "validTo", "type": "Date"}' />
                            </customData>
                            <Text text="Valid To" />
                        </Column>

                        <Column width="auto" hAlign="Left" visible="false">
                            <customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "comment", "columnIndex":"8", "leadingProperty": "comment", "type": "string"}' />
                            </customData>
                            <Text text="Comment" />
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem type="Navigation">
                            <cells>
                                <Text text="{rechargeTypeId}" />
                                <Text text="{version}" />
                                <Text text="{rechargeType}" />
                                <Text text="{rechargeTypeDesc}" />
                                <Text text="{rechargeAssessmentReq}" />
                                <Text text="{taxCode}" />
                                <Text text="{
                                    path: 'validFrom',
                                    type: 'sap.ui.model.type.Date',
                                    formatOptions: { style: 'medium' }
                                }" />
                                <Text text="{
                                    path: 'validTo',
                                    type: 'sap.ui.model.type.Date',
                                    formatOptions: { style: 'medium' }
                                }" />
                                <Text text="{comment}" />
                            </cells>
                        </ColumnListItem>
                    </items>

                </Table>
            </smartTable:SmartTable>
        </VBox>
    </Page>
</mvc:View>
