                                            <core:CustomData key="p13nData" value='\{"columnKey": "SCOPE", "maxLength": "500","columnIndex":"14","sortProperty": "SCOPE",  "leadingProperty": "SCOPE", "type": "string"}' />
                                        </customData>
                                        <Text text="{i18n>othScope}" />
                                    </Column>
                                    <Column width="auto" hAlign="Left" visible="false">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "AGG_TAG_DESC", "columnIndex":"15","sortProperty": "AGG_TAG_DESC",  "leadingProperty": "AGG_TAG_DESC", "type": "string"}' />
                                        </customData>
                                        <Text text="{i18n>tags}" />
                                    </Column>
                                    <Column width="auto" hAlign="Left" visible="false">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "AGG_FUNCTION", "columnIndex":"16","sortProperty": "AGG_FUNCTION",  "leadingProperty": "AGG_FUNCTION", "type": "string"}' />
                                        </customData>
                                        <Text text="Functions" />
                                    </Column>
                                    <Column width="auto" hAlign="Left" visible="false">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "AGG_SBU", "columnIndex":"17","sortProperty": "AGG_SBU",  "leadingProperty": "AGG_SBU", "type": "string"}' />
                                        </customData>
                                        <Text text="SBU" />
                                    </Column>
                                    <Column width="auto" hAlign="Left" visible="false">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "AGG_SITE_AREA", "columnIndex":"18","sortProperty": "AGG_SITE_AREA",  "leadingProperty": "AGG_SITE_AREA", "type": "string"}' />
                                        </customData>
                                        <Text text="Site Area" />
                                    </Column>
                                    <Column width="auto" hAlign="Left" visible="false">
