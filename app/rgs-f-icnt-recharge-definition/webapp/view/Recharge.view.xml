                                    <Column width="auto" hAlign="Left">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "CODE", "maxLength": "100","columnIndex":"0", "leadingProperty": "CODE", "sortProperty": "CODE", "filterProperty": "CODE", "type": "string", "additionalProperty":"ID"}' />
                                        </customData>
                                        <Text text="{i18n>himdocNo}" />
                                    </Column>
                                    <Column width="auto" hAlign="Left" visible="true">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "REVISION", "maxLength": "4", "columnIndex": "1", "leadingProperty": "REVISION", "sortProperty": "REVISION", "filterProperty": "REVISION", "type": "integer"}' />
                                        </customData>
                                        <Text text="{i18n>rev}" />
                                    </Column>
                                    <Column width="auto" hAlign="Left">
                                        <customData>
