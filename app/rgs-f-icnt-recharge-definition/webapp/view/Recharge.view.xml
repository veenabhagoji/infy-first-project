                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "AGG_REGION", "maxLength": "100","columnIndex":"9", "leadingProperty": "AGG_REGION", "sortProperty": "AGG_REGION", "filterProperty": "AGG_REGION", "type": "string"}' />
